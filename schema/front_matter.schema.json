{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": [
    "id",
    "title",
    "domain",
    "status",
    "audience",
    "tags",
    "last_reviewed"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^(biz|swd|shr)\\.[a-z0-9_\\-\\.]+\\.[0-9]{3,}$"
    },
    "title": {
      "type": "string",
      "minLength": 3
    },
    "domain": {
      "type": "string"
    },
    "status": {
      "type": "string"
    },
    "audience": {
      "type": "string"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^[a-z0-9\\-]+$"
      },
      "minItems": 1
    },
    "last_reviewed": {
      "type": "string",
      "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$"
    },
    "superseded_by": {
      "type": "string"
    },
    "summary": {
      "type": "string"
    }
  },
  "additionalProperties": false
}
